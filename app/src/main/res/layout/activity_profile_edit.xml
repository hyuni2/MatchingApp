<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditActivity">

    <!-- 전체 컨테이너 -->
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 프로필 이미지 및 입력 필드 수평 정렬 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 프로필 이미지 -->
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Profile Image"
                android:src="@drawable/ic_launcher_background" />

            <!-- 닉네임 및 전공 입력 필드 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="닉네임을 입력하세요" />

                <EditText
                    android:id="@+id/editMajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="전공을 입력하세요" />
            </LinearLayout>
        </LinearLayout>

        <!-- 멘토/멘티 체크박스 그룹 -->

        <!-- 멘토/멘티 소개서 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/MentorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멘토" />

            <CheckBox
                android:id="@+id/MenteeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="멘티" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="멘토/멘티 소개서"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Profileintro"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="top|start"
            android:hint="소개 내용을 작성해주세요."
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />

        <!-- 수정 완료 버튼 -->
        <Button
            android:id="@+id/ProfileEditDoneButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#616161"
            android:text="수정 완료" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
