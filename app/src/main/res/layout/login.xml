<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/login">

    <ImageButton
        android:id="@+id/backbtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baclbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/enter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/enter_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:background="@drawable/rectangle5"
            android:paddingLeft="10dp"
            android:autofillHints="username"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/enter_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_password"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/pw"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:background="@drawable/rectangle5"
            android:paddingLeft="10dp"
            android:autofillHints="password"
            android:layout_marginBottom="32dp" />

        <ImageButton
            android:id="@+id/checkidpw"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/roginbt" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>